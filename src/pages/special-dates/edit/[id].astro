---
import DashboardLayout from "../../../components/layouts/DashboardLayout.astro";
import { apiFetch } from "../../../lib/utils/fetch.js";

const { id } = Astro.params;
let error = "";
let specialDate = null;

// Cargar datos existentes
try {
  specialDate = await apiFetch(`/special-dates/${id}`);
} catch (err) {
  error = "No se pudo cargar la fecha especial.";
}

// Guardar cambios
if (Astro.request.method === "POST") {
  const form = await Astro.request.formData();

  const data = {
    date: form.get("date"),
    name: form.get("name"),
    description: form.get("description") || null,
  };

  try {
    await apiFetch(`/special-dates/${id}`, {
      method: "PUT",
      body: JSON.stringify(data),
    });

    return Astro.redirect("/special-dates");
  } catch (err) {
    error = err.message || "Error actualizando la fecha especial.";
  }
}
---

<DashboardLayout title="Editar Fecha Especial">

  <h1 class="text-2xl font-semibold mb-6">Editar Fecha Especial</h1>

  {error && (
    <p class="p-3 bg-red-100 text-red-600 rounded mb-4">{error}</p>
  )}

  {specialDate && (
    <form method="POST" class="bg-white shadow rounded-lg p-6 max-w-xl">

      <!-- FECHA -->
      <div class="mb-4">
        <label class="block font-medium mb-1">Fecha</label>
        <input 
          type="date"
          name="date"
          value={specialDate.date}
          required
          class="input"
        />
      </div>

      <!-- NOMBRE -->
      <div class="mb-4">
        <label class="block font-medium mb-1">Nombre</label>
        <input
          type="text"
          name="name"
          value={specialDate.name}
          required
          class="input"
        />
      </div>

      <!-- DESCRIPCIÓN -->
      <div class="mb-4">
        <label class="block font-medium mb-1">Descripción (opcional)</label>
        <textarea
          name="description"
          rows="3"
          class="input"
        >{specialDate.description || ""}</textarea>
      </div>

      <!-- BOTONES -->
      <div class="flex gap-3 mt-6">
        <button
          type="submit"
          class="px-5 py-2 bg-[#FF3131] text-white rounded hover:bg-[#FF3232]"
        >
          Guardar Cambios
        </button>

        <a
          href="/special-dates"
          class="px-5 py-2 bg-gray-300 rounded hover:bg-gray-400"
        >
          Cancelar
        </a>
      </div>

    </form>
  )}

</DashboardLayout>

<style>
  .input {
    @apply w-full border rounded px-3 py-2 shadow-sm focus:ring focus:border-blue-400;
  }
</style>
