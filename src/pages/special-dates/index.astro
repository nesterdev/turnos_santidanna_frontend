---
import DashboardLayout from "../../components/layouts/DashboardLayout.astro";
import { apiFetch } from "../../lib/utils/fetch.js";
import { setupModal, openConfirmModal } from "../../lib/utils/modal.js";

let dates = [];
let error = "";

// Cargar fechas especiales
try {
  dates = await apiFetch("/special-dates");
} catch (err) {
  error = "No se pudieron cargar las fechas especiales.";
}

---

<DashboardLayout title="Fechas Especiales">

  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-semibold">Fechas Especiales</h1>

    <a
      href="/special-dates/create"
      class="px-4 py-2 bg-[#FF3131] text-white rounded hover:bg-[#FF3232]"
    >
      + Nueva Fecha
    </a>
  </div>

  {error && (
    <p class="p-3 bg-red-100 text-red-600 rounded mb-4">{error}</p>
  )}

  {dates.length === 0 ? (
    <p class="text-gray-500">No hay fechas especiales registradas.</p>
  ) : (
    <div class="overflow-x-auto bg-white shadow rounded-lg">
      <table class="min-w-full">
        <thead class="bg-gray-100">
          <tr>
            <th class="th">Fecha</th>
            <th class="th">Nombre</th>
            <th class="th">Descripción</th>
            <th class="th text-right">Acciones</th>
          </tr>
        </thead>

        <tbody>
          {dates.map(d => (
            <tr class="border-t">
              <td class="td">{d.date}</td>
              <td class="td">{d.name}</td>
              <td class="td">{d.description || "—"}</td>

              <td class="td text-right">
                <a
                  href={`/special-dates/view/${d.id}`}
                  class="action-btn gray"
                >
                  Ver
                </a>

                <a
                  href={`/special-dates/edit/${d.id}`}
                  class="action-btn blue"
                >
                  Editar
                </a>

                <button
                  class="action-btn red"
                  onclick={`confirmDelete(${d.id})`}
                >
                  Eliminar
                </button>
              </td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>
  )}

</DashboardLayout>

<script>
  import { setupModal, openConfirmModal } from "../../lib/utils/modal.js";
  setupModal();

  window.confirmDelete = function (id) {
    openConfirmModal({
      title: "Eliminar Fecha Especial",
      message: "¿Seguro que deseas eliminar esta fecha especial?",
      confirm: () => {
        fetch(`/api/delete-special-date/${id}`, { method: "POST" })
          .then(() => (window.location.href = "/special-dates"));
      },
    });
  };
</script>

<style>
  .th {
    @apply px-4 py-2 text-left font-medium text-gray-700;
  }
  .td {
    @apply px-4 py-2;
  }
  .action-btn {
    @apply px-3 py-1 rounded text-sm mr-2;
  }
  .action-btn.blue {
    @apply bg-[#FF3131] text-white hover:bg-[#FF3232];
  }
  .action-btn.gray {
    @apply bg-gray-300 hover:bg-gray-400;
  }
  .action-btn.red {
    @apply bg-red-600 text-white hover:bg-red-700;
  }
</style>
