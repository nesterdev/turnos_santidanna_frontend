---
import DashboardLayout from "../../../components/layouts/DashboardLayout.astro";
import { apiFetch } from "../../../lib/utils/fetch.js";

const { id } = Astro.params;

let specialDate = null;
let error = "";

// Obtener registro
try {
  specialDate = await apiFetch(`/special-dates/${id}`);
} catch (err) {
  error = "No se pudo cargar la fecha especial.";
}
---

<DashboardLayout title="Ver Fecha Especial">

  <h1 class="text-2xl font-semibold mb-6">Detalle de Fecha Especial</h1>

  {error && (
    <p class="bg-red-100 text-red-600 p-3 rounded mb-4">{error}</p>
  )}

  {specialDate && (
    <div class="bg-white shadow rounded-lg p-6 max-w-xl">
      
      <div class="mb-4">
        <p class="text-gray-500 text-sm">Fecha</p>
        <p class="text-lg font-medium">{specialDate.date}</p>
      </div>

      <div class="mb-4">
        <p class="text-gray-500 text-sm">Nombre</p>
        <p class="text-lg font-medium">{specialDate.name}</p>
      </div>

      <div class="mb-4">
        <p class="text-gray-500 text-sm">Descripción</p>
        <p class="text-lg">{specialDate.description || "—"}</p>
      </div>

      <div class="flex gap-3 mt-6">
        <a
          href={`/special-dates/edit/${id}`}
          class="px-5 py-2 bg-[#FF3131] text-white rounded hover:bg-[#FF3232]"
        >
          Editar
        </a>

        <a
          href="/special-dates"
          class="px-5 py-2 bg-gray-300 rounded hover:bg-gray-400"
        >
          Volver
        </a>
      </div>
    </div>
  )}

</DashboardLayout>
