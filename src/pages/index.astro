---

import PublicHeader from "../components/ui/PublicHeader.astro";
import PublicHero from "../components/public/PublicHero.astro";
import PublicFeatures from "../components/public/PublicFeatures.jsx";
import SchedulePublicView from "../components/schedules/SchedulePublicView.jsx";
import PublicLayout from "../components/public/PublicLayout.astro";
---

<PublicLayout>
  <PublicHeader title="Sistema de Horarios" />

  <main class="min-h-screen">
    <PublicHero />
    <PublicFeatures client:load />

    <section class="bg-gray-50 border-t">
      <div class="max-w-7xl mx-auto px-6 py-12">
        <h2 class="text-2xl font-semibold text-gray-900 mb-6">
          Horarios públicos
        </h2>

        <SchedulePublicView client:load />
      </div>
    </section>
  </main>

  <footer class="border-t bg-white">
    <div class="max-w-7xl mx-auto px-6 py-6 text-sm text-gray-500">
      © {new Date().getFullYear()} Sistema de Gestión de Horarios
    </div>
  </footer>
</PublicLayout>
